<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <com.fengjie.percentlibrary.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_from_lookQuestion"
            style="@style/w_w_h_w"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/from"
            android:textColor="@color/gray"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_studentName_lookQuestion"
            style="@style/w_w_h_w"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_from_lookQuestion"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="name"
            android:textColor="@color/blue"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/tv_studentName_lookQuestion"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="提问者"
            android:textColor="@color/gray"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_title_lookQuestion"
            style="@style/w_w_h_w"
            android:layout_below="@+id/tv_studentName_lookQuestion"
            android:text="节点的电流如何分析?"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_answerTime_lookQuestion"
            style="@style/w_w_h_w"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="2017-04-09 12:00"
            android:textColor="@color/gray"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/tv_questionContent_lookQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_lookQuestion"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="微信设计的神细节有哪些？微信设计的神细节有哪些？"
            android:textColor="@android:color/black"
            android:textSize="17sp"/>


    </com.fengjie.percentlibrary.PercentRelativeLayout>

